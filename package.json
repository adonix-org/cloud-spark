{
    "name": "@adonix.org/cloud-spark",
    "version": "0.0.95",
    "description": "Ignite your Cloudflare Workers with a type-safe library for rapid development.",
    "license": "Apache-2.0",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "author": {
        "name": "Ty Busby",
        "email": "tybusby@adonix.org",
        "url": "https://www.adonix.org"
    },
    "keywords": [
        "cloudflare",
        "workers",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/adonix-org/cloud-spark"
    },
    "bugs": {
        "email": "support@adonix.org",
        "url": "https://github.com/adonix-org/cloud-spark/issues"
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "prepare-pack": "node -e \"require('fs').mkdirSync('artifacts', { recursive: true })\"",
        "pack": "npm run prepare-pack && npm pack --pack-destination ./artifacts",
        "test": "vitest",
        "debug": "tsc && tsx ./src/debug.ts"
    },
    "devDependencies": {
        "@cloudflare/vitest-pool-workers": "^0.8.67",
        "@cloudflare/workers-types": "^4.20250821.0",
        "@vitest/coverage-v8": "^3.2.4",
        "tsup": "^8.5.0",
        "tsx": "^4.20.4",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "cache-control-parser": "^2.0.6",
        "http-status-codes": "^2.3.0"
    }
}
